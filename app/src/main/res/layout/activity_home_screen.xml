<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.gmit.gmit3D.main.HomeScreen">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/homeScreenBar"
        android:layout_width="wrap_content"
        android:layout_height="256dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_theme">

    <ImageView
        android:id="@+id/frontImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/college_front"
        android:layout_alignBottom="@+id/homeScreenText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="94dp"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GMIT 3D"
        android:id="@+id/homeScreenText"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp" />

    /*Locate button*/
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="Locate"
        android:id="@+id/locate"
        android:onClick="openCamera"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_alignTop="@+id/timetable"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    /*Timetable button*/
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="Timetable"
        android:id="@+id/timetable"
        android:layout_below="@+id/frontImage"
        android:layout_toRightOf="@+id/locate"
        android:layout_toEndOf="@+id/locate"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="57dp" />

    /*Assignment button*/
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="Assignment"
        android:id="@+id/assignment"
        android:layout_alignTop="@+id/about"
        android:layout_alignLeft="@+id/locate"
        android:layout_alignStart="@+id/locate" />

    /*About button*/
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="About"
        android:id="@+id/about"
        android:layout_below="@+id/timetable"
        android:layout_alignLeft="@+id/timetable"
        android:layout_alignStart="@+id/timetable"
        android:layout_marginTop="62dp" />
</RelativeLayout>

</android.support.design.widget.CoordinatorLayout>