<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.gmit.gmit3D.main.HomeScreen">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/homeScreenBar"
        android:layout_width="wrap_content"
        android:layout_height="256dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/GmitMap">

    <ImageView
        android:id="@+id/frontImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/college_front"
        android:layout_alignBottom="@+id/homeScreenText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="94dp"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GMIT 3D"
        android:id="@+id/homeScreenText"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp" />

    /*Locate button*/
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="@drawable/camera_icon"
        android:text="Locate"
        android:id="@+id/locate"
        android:onClick="openCamera"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    /*Timetable button*/
    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="@drawable/timetable_icon"
        android:text="Timetable"
        android:id="@+id/timetable"
        android:layout_alignTop="@+id/locate"
        android:layout_alignLeft="@+id/about"
        android:layout_alignStart="@+id/about" />

    /*Assignment button*/
    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="Assignment"
        android:id="@+id/assignment"
        android:foreground="@drawable/assignment_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/locate"
        android:layout_alignStart="@+id/locate"
        android:layout_marginBottom="112dp" />

    /*About button*/
    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="@drawable/about_icon"
        android:text="About"
        android:id="@+id/about"
        android:layout_alignTop="@+id/assignment"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/assignment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/GmitMap" />

</RelativeLayout>

</android.support.design.widget.CoordinatorLayout>